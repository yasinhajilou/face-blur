# ================================
# Face Blur - Environment Variables
# ================================
# Copy this file to .env and update values

# Backend Configuration
# ---------------------

# Maximum file size in bytes (default: 500MB)
MAX_FILE_SIZE=524288000

# Maximum video duration in seconds (default: 300 = 5 minutes)
MAX_DURATION_SECONDS=300

# Automatic cleanup interval in hours (default: 1)
CLEANUP_AFTER_HOURS=1

# Rate limit: requests per IP per hour (default: 10)
MAX_REQUESTS_PER_HOUR=10

# Face detection confidence threshold (0.0 - 1.0, default: 0.5)
DETECTION_CONFIDENCE=0.5

# Gaussian blur kernel size (must be odd, default: 99)
BLUR_KERNEL_SIZE=99

# Temporary files directory
TEMP_DIR=/tmp/face-blur

# CORS allowed origins (comma-separated)
# Update with your frontend domain
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://your-app.pages.dev

# Server Configuration
# --------------------

# Host to bind to
HOST=0.0.0.0

# Port to listen on
PORT=8000

# Number of worker processes
WORKERS=2

# Frontend Configuration
# ----------------------
# (Set in frontend code or as meta tag)

# Backend API URL
API_URL=http://localhost:8000

# For Cloudflare Pages deployment:
# VITE_API_URL=https://your-api-domain.com
